  <!-- Auto-hide header on scroll down, show on scroll up -->
  <script>
    (function() {
      const header = document.querySelector('.site-header');
      let lastY = window.scrollY;
      window.addEventListener('scroll', () => {
        const y = window.scrollY;
        if (y > 80 && y > lastY) {
          header.classList.add('hide');     // scrolling down -> hide
        } else {
          header.classList.remove('hide');  // scrolling up -> show
        }
        lastY = y;
      }, { passive: true });
    })();

       (function() {
      const modal = document.querySelector('.nt-modal');
      if (!modal) return;

      const body = document.body;
      const titleEl = modal.querySelector('.nt-modal__title');
      const contentEl = modal.querySelector('.nt-modal__content');
      const closeBtn = modal.querySelector('.nt-modal__close');
      const triggers = document.querySelectorAll('.nt-more-btn');
      let lastTrigger = null;

      const renderContent = (btn) => {
        contentEl.innerHTML = '';
        const detail = btn.dataset.ntDetail || '';
        detail.split('|').forEach(segment => {
          const text = segment.trim();
          if (!text) return;
          const p = document.createElement('p');
          p.textContent = text;
          contentEl.appendChild(p);
        });

        const points = btn.dataset.ntPoints || '';
        const items = points.split('|').map(item => item.trim()).filter(Boolean);
        if (items.length) {
          const list = document.createElement('ul');
          list.className = 'nt-modal__list';
          items.forEach(item => {
            const li = document.createElement('li');
            li.textContent = item;
            list.appendChild(li);
          });
          contentEl.appendChild(list);
        }
      };

      const openModal = (btn) => {
        lastTrigger = btn;
        const title = btn.dataset.ntTitle || btn.closest('.nt-card, .nt-hi-card, .nt-note')?.querySelector('h3, h4')?.textContent || 'Details';
        titleEl.textContent = title;
        renderContent(btn);
        modal.setAttribute('aria-hidden', 'false');
        modal.classList.add('is-visible');
        body.classList.add('no-scroll');
        requestAnimationFrame(() => closeBtn.focus());
      };

      const closeModal = () => {
        modal.setAttribute('aria-hidden', 'true');
        modal.classList.remove('is-visible');
        body.classList.remove('no-scroll');
        if (lastTrigger) {
          lastTrigger.focus();
        }
      };

      triggers.forEach(btn => {
        btn.addEventListener('click', () => openModal(btn));
      });

      modal.addEventListener('click', (event) => {
        if ('ntClose' in event.target.dataset) {
          closeModal();
        }
      });

      document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape' && modal.classList.contains('is-visible')) {
          closeModal();
        }
      });
    })();

    (function() {
      const modal = document.querySelector('.founder-modal');
      const nameEl = modal.querySelector('.founder-modal__name');
      const roleEl = modal.querySelector('.founder-modal__role');
      const storyEl = modal.querySelector('.founder-modal__story');
      const founders = document.querySelectorAll('.founder-card');

      const openModal = (card) => {
        nameEl.textContent = card.dataset.founderName;
        roleEl.textContent = card.dataset.founderRole;
        storyEl.textContent = card.dataset.founderStory;
        modal.setAttribute('aria-hidden', 'false');
        modal.classList.add('is-visible');
        document.body.classList.add('no-scroll');
      };

      const closeModal = () => {
        modal.setAttribute('aria-hidden', 'true');
        modal.classList.remove('is-visible');
        document.body.classList.remove('no-scroll');
      };

      founders.forEach(card => {
        card.addEventListener('click', () => openModal(card));
        card.addEventListener('keydown', (event) => {
          if (event.key === 'Enter' || event.key === ' ') {
            event.preventDefault();
            openModal(card);
          }
        });
        card.setAttribute('tabindex', '0');
        card.setAttribute('role', 'button');
        card.setAttribute('aria-haspopup', 'dialog');
        card.setAttribute('aria-label', `${card.dataset.founderName} story`);
      });

      modal.addEventListener('click', (event) => {
        if (event.target.matches('[data-founder-close]')) {
          closeModal();
        }
      });

      document.addEventListener('keydown', (event) => {
        if (event.key === 'Escape' && modal.classList.contains('is-visible')) {
          closeModal();
        }
      });
    })();
  </script>
  
</body>
